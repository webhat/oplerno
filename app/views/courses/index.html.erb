<div class='clearfix'>
	<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12 '>
		<h1><%= t('courses.title')%></h1>
	</div>

	<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
		<div class='alert-message warning'>
			<a class="close" href="#">Ã—</a>
			<p>
				Oplerno is a growing open learning organization. &nbsp;Courses are listed for enrollment as they are completed by the faculty member who is developing and teaching a course. &nbsp;If you're interested in adding to our course catalog as a faculty member and instructor, please <a href="http://oplerno.com/faculty">read through our faculty page</a>. Students may view admissions policies and procedures at our <a href="http://oplerno.com/admissions">admissions page</a>.
		</p>
		</div>
	</div>

	<div class='pull-right'>
		<%= paginate @courses %>
	</div>
	<div class="clearfix"></div>

	<% @courses.each do |course| %>
		<div class='col-lg-3 col-md-3 col-sm-4 col-xs-4 small'><%= render course %></div>
	<% end unless @courses.empty? %>

	<div class="clearfix"></div>
	<div class='pull-right'>
		<%= paginate @courses %>
	</div>
	<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12 '>
		<h1><%= t('courses.under_development')%></h1>
	</div>

	<div class='pull-right'>
		<%= paginate @courses_underdev %>
	</div>
	<div class="clearfix"></div>

	<% @courses_underdev.each do |course| %>
		<div class='col-lg-3 col-md-3 col-sm-4 col-xs-4 small'><%= render course %></div>
	<% end unless @courses_underdev.empty? %>

	<div class="clearfix"></div>
	<div class='pull-right'>
		<%= paginate @courses_underdev %>
	</div>
</div>

